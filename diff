<div class="result" id="resultat"></div>

<script>
  function calculerResultat() {
    const total = { grasse: 0, sèche: 0, mixte: 0, sensible: 0 };
    const questions = 20;

    for (let i = 1; i <= questions; i++) {
      const val = document.querySelector('input[name="q' + i + '"]:checked');
      if (val) total[val.value]++;
    }

    const max = Math.max(...Object.values(total));
    const type = Object.keys(total).find(key => total[key] === max);

    let message = "";
    switch(type) {
      case "grasse":
        message = "Votre peau semble grasse : pores visibles, brillances fréquentes, imperfections. Optez pour des soins purifiants et équilibrants.";
        break;
      case "sèche":
        message = "Votre peau semble sèche : tiraillements, inconfort, texture rêche. Privilégiez des soins riches et protecteurs.";
        case "mixte":
        message = "Votre peau semble mixte : grasse sur certaines zones, sèche sur d'autres. Adaptez votre routine selon les zones.";
        break;
      case "sensible":
        message = "Votre peau semble sensible : réactive, sujette aux rougeurs ou irritations. Choisissez des soins doux et sans parfum.";
        break;
    }

    document.getElementById('resultat').innerText = message;
    document.getElementById('resultat').style.display = 'block';
  }
</script>

